	/**	 * @author api	 */	internal class TimeUtil {				public static function formatSeconds(sec:Number):String {			if (isNaN(sec))				return "00:00";			var t:String = "";						var min:Number = Math.floor(sec/60);			var seconds:int = int(sec) % 60;			t = two(seconds);								var hr:Number = Math.floor(min/60);			min = min % 60;			t = two(min) + ":" + t;						if (hr == 0) return t;						var day:Number = Math.floor(hr/60);			hr = hr % 60;			t = two(hr) + ":" + t;						if (day == 0) return t;						t = day + ":" + t;						return t;		}				private static function two(x:Number):String {			return ((x>9) ? "" : "0") + x;		}	}}